/* pagesDevice/pages/report/index.wxss */
.report{
    font-size: 28rpx;
    font-weight:bold;
    padding:50rpx 58rpx 0;

}
.report-text{
    margin-left:35rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: #000000;
    opacity: 0.7;
}
.report-area{
    border:2rpx solid rgb(194,194,194);
    margin-top:16rpx;
    position:relative;
    padding:20rpx;
    height:218rpx;
    box-sizing:border-box;
    margin-bottom:26rpx;
}
.report-btn-box{
   margin-top:8rpx;
   display:flex;
   justify-content:space-between;
}
.report-btn{
    width: 278rpx;
    height: 104rpx;
    background: #FF2145;
    border-radius: 28rpx;
    color:#fff;
    font-size:24rpx;
    margin: 0;
    line-height:1.5;
}
.report-back{
   width:626rpx;
   height:84rpx;
   background:url("https://lidian.etianneng.cn/admin/sys-file/dosp/3b6d7ad102734b898db1628596269abb.png");
   background-size: 100%;
   background-repeat:no-repeat;
   margin:30rpx 0 0 0;
   font-size: 22rpx;
   font-weight: 500;
   color: #FEFEFE;
   line-height:84rpx;
}
.report-btn-content{
    display:flex;
    justify-content:center;
    height:100%;
    flex-direction: column;
}