/* pages/deviceDetail/index.wxss */
page{
  background:#F6F6F6;
}
.device-detail{
  margin:26rpx 32rpx 0;
}
.device-detail-image-box{
  width: 686rpx;
  height: 442rpx;
  line-height: 40rpx;
  text-align: center;
  background:#FFF;
  color: rgba(110, 110, 110, 100);
  font-size: 24rpx;
  border-radius: 0 20rpx 20rpx 20rpx;
  box-shadow:6rpx 6rpx 6rpx rgb(255,182,193,0.5);
}
.device-detail-image{
  width:392rpx;
  height: 232rpx !important;
  margin:68rpx 128rpx 26rpx 166rpx;
}
.device-detail-status-box{
  width: 686rpx;
  height: 202rpx;
  line-height: 40rpx;
  text-align: center;
  background:#FFF;
  margin:26rpx 0 ;
  display:flex;
  justify-content:space-between;
  align-items: center;
  padding:0  26rpx 0 52rpx;
  color: #1890FF;
  font-size: 32rpx;
  box-sizing: border-box;
  border-radius: 0 20rpx 20rpx 20rpx;
  box-shadow:6rpx 6rpx 6rpx rgb(255,182,193,0.5);
}
.device-detail-status-text{
  color: rgba(51, 51, 51, 100);
  font-size: 36rpx;
  font-weight: bold;
}
.device-detail-status-battery{
  margin-bottom: 14rpx;
}
.device-detail-date-box{
  color: rgba(51, 51, 51, 100);
  font-size: 28rpx;  
  margin:0 26rpx;
}
.device-detail-date{
  display: flex;
  justify-content: space-between;
  height: 36rpx;
  line-height: 36rpx;
  margin-bottom: 14rpx;
}
.device-detail-fault-box{
  width: 686rpx;
  height: 102rpx;
  line-height: 40rpx;
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(168, 168, 168, 10);
  border: 2rpx solid rgba(255, 255, 255, 100);
  margin:62rpx 28rpx 14rpx 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding:0 40rpx 0 34rpx;
  background:#fff;
  
}
.device-detail-bms-box{
  width: 686rpx;
  line-height: 40rpx;
  border-radius: 24rpx;
  text-align:left;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(168, 168, 168, 10);
  border: 2rpx solid rgba(255, 255, 255, 100);
  background:#fff;
  padding:26rpx 0 32rpx 34rpx;
  box-sizing: border-box;
  margin-bottom: 76rpx;
}
.device-detail-bms-box-title{
  height: 40rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
}
.device-detail-bms-box-info{
  color: rgba(16, 16, 16, 100);
  font-size: 24rpx;
  margin:26rpx 0 64rpx 40rpx;
}
.mt-76{
  margin-top: 76rpx;
}
.device-detail-tab-box{
 /* margin:0 30rpx; */
 display: flex;
 flex-wrap: wrap;
}
.device-detail-tab{
  width: 324rpx;
  height: 102rpx; 
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(168, 168, 168, 10);
  border: 2rpx solid rgba(255, 255, 255, 100);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding:0 40rpx 0 48rpx;
  margin: 0 0rpx 32rpx 30rpx; 
}
.device-detail-basic-box{
  color: rgba(51, 51, 51, 100);
  font-size: 28rpx;
  margin:4rpx 0 56rpx 26rpx;
}
.device-detail-basic-box-title,.device-detail-basic-box-info{
  margin-bottom: 24rpx;
}
.device-detail-basic-box-info:last-child{
  text-decoration: line-through;
}
.device-detail-status-blue{
  display: flex;
}
.device-detail-date-empty-box{
   display: flex;
   justify-content: space-between;
   color: rgba(204, 204, 204, 100);
   font-size: 28rpx;
   margin:0 40rpx 230rpx;
}
.icon-big{
  width:50rpx;
}
.icon-small{
  width:40rpx;
}
.opacity{
  opacity: 0.2;
}
