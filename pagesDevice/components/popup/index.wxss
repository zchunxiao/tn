/* pagesOther/components/popup/index.wxss */
.c-popup{
  position:fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  background:rgba(0,0,0,0.4);
  z-index:1000;
}
.c-popup-content{
  position:absolute;
  left:0;
  right:0;
  bottom:0;
  background:#fff;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow:10rpx 10rpx 10rpx #000;
  padding: 20rpx;
  transition:all 2s; 
}
.c-popup-img{
  width:100%;
}
.hide{
  margin-bottom:-200%;
}