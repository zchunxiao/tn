<!--pagesMy/pages/concat/index.wxml-->
<view class="contact">
    <view class="contact-logo">
       <image mode="widthFix" src="{{info.headImgUrl || ''}}" class="contact-logo-img"/>
    </view>
    <image src="https://lidian.etianneng.cn/admin/sys-file/dosp/b09df0ede6684a1cb3c218a2af86a8d2.png" mode="widthFix" class="contact-name"/>

    <view class="contact-content">
      <view class="contact-content-item">
         <text class="bold">电话</text>
         <text bindtap='tel' data-phone="{{info.phone||''}}">{{info.phone||""}}</text>
      </view>
      <view class="contact-content-item">
         <text class="bold">邮编</text>
         <text>{{info.postCode||""}}</text>
      </view>
      <view class="contact-content-item">
         <text class="bold">网址</text>
         <text>{{info.postalAddresse||""}}</text>
      </view>
      <view class="contact-content-item">
         <text class="bold">邮箱</text>
         <text>{{info.mailbox||""}}</text>
      </view>
      <view class="contact-content-item">
         <text class="bold">传真</text>
         <text>{{info.fax ||""}}</text>
      </view>
      <view class="contact-content-item">
         <text class="bold">地址</text>
         <text>{{info.address || ""}}</text>
      </view>
    </view>

    <image mode="widthFix" src="{{info.qrCode || ''}}" class="contact-code"/>
</view>
